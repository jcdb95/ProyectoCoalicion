<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".CarrerasActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/Toolbar"
        app:title="Paisajismo"/>

    <RelativeLayout
        android:id="@+id/textViewHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/aprobadas_text_view"
                style="@style/Header_view"
                android:text="Aprobadas: 0 "
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/restantes_text_view"
                style="@style/Header_view"
                android:text="Restantes: 39"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/progressBarView"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/customprogressbar"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="24dp"
                    android:max="100"
                    android:progress="0" />


                <TextView
                    android:id="@+id/porcentaje_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="0 %"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:textSize="20sp" />



            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewHeader">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:background="@drawable/fondo2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@drawable/fondo1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:text="CBC" />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/SociedadYEstado"
                    android:text="Sociedad y Estado"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/PensamientoCientifico"
                    android:text="Pensamiento Cientifico"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/ProyectualI"
                    android:text="Proyectual I"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Proyectual II"
                    android:id="@+id/ProyectualII"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Matematica I"
                    android:id="@+id/MatematicaI"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Biología"
                    android:id="@+id/Biologia"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/TallerDeDibujo"
                    android:text="Taller de Dibujo"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nivel 1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:textColor="#03a9f4"
                    android:textSize="16dp" />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/PlanificacionYDisenoDelPaisajeI"
                    android:text="Planificación y Diseño del Paisaje I"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/SistemasDeRepGeometrica"
                    android:text="Sistemas de Rep. Geometrica"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/QuimicaGeneral"
                    android:text="Química General"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/BotanicaGeneral"
                    android:text="Botánica General"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/FisicaAplicada"
                    android:text="Física Aplicada"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/QuimicaBiologica"
                    android:text="Química Biológica"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/BotanicaSistematica"
                    android:text="Botánica Sistemática"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:id="@+id/MaterialesElementosYProcedimientosDeConstruccion"
                    android:onClick="clickeada"
                    android:text="Materiales, Elementos y Procedimientos de Construcción"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Vegetación I"
                    android:id="@+id/VegetacionI"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nivel 2"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:textColor="#03a9f4"
                    android:textSize="16dp" />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Planificación y Diseño del Paisaje II"
                    android:id="@+id/PlanificacionYDisenoDelPaisajeII"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/VegetacionII"
                    android:text="Vegetación II"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/FisiologiaVegetal"
                    android:text="Fisiología Vegetal"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Edafología"
                    android:id="@+id/Edafologia"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Instalaciones y Equipamientos"
                    android:id="@+id/InstalacionesYEquipamientos"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Climatología y Fenología"
                    android:id="@+id/ClimatologiaYFenologia"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/Topografia"
                    android:text="Topografía"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/MorfologiaYComunicacionI"
                    android:text="Morfología y Comunicación I"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nivel 3"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:textColor="#03a9f4"
                    android:textSize="16dp" />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/PlanificacionYDisenoDelPaisajeIII"
                    android:text="Planificación y Diseño del Paisaje III"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/HistoriaDeLaArqPaisajisticaI"
                    android:text="Historia de la Arquitectura Paisajística I"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/MorfologiaYComunicacionII"
                    android:text="Morfología y Comunicación II"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/ManejoDelSueloYLaVegetacion"
                    android:text="Manejo del Suelo y la Vegetación"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Ecología"
                    android:id="@+id/Ecologia"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Geografía"
                    android:id="@+id/Geografia"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/Fitogeografia"
                    android:text="Fitogeografía"
                     />


                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Optativa"
                    android:id="@+id/Optativa"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nivel 4"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:textColor="#03a9f4"
                    android:textSize="16dp" />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/PlanificacionYDisenoDelPaisajeIV"
                    android:text="Planificación y Diseño del Paisaje IV"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/HistoriaDeLaArqPaisajisticaII"
                    android:text="Historia de la Arquitectura Paisajística II"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/PlaneamientoUrbanoYRegional"
                    android:text="Planeamiento Urbano y Regional"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/EcologiaDelPaisaje"
                    android:text="Ecología del Paisaje"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/TrabajoFinal"
                    android:text="Trabajo Final"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:id="@+id/PracticaProfesional"
                    android:text="Práctica Profesional"
                     />

                <CheckBox
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Optativa"
                    android:id="@+id/Optativa2"
                     />


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</LinearLayout>