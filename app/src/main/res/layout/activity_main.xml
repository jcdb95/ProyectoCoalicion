            <View style="@style/Lineas_view" />

            <TextView
                android:id="@+id/carrera_paisajismo"
                style="@style/Estilo"
                android:text="Paisajismo" />

            <View style="@style/Lineas_view" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>
