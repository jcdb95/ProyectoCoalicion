<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:elevation="4dp"
        app:title="@string/app_name"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/Toolbar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="8dp">


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#FFFFFF">


            <View
                style="@style/Lineas_view" />

            <TextView
                android:id="@+id/arquitecturaboton"
                style="@style/Estilo"
                android:text="Arquitectura"
                android:onClick="abrirArquitectura"/>
            <View
                style="@style/Lineas_view"/>

            <TextView
                android:id="@+id/disenograficoboton"
                style="@style/Estilo"
                android:text="Dise침o Gr치fico"
                android:onClick="abrirDisenoGrafico"/>
            <View
                style="@style/Lineas_view" />

            <TextView
                android:id="@+id/disenoimagenboton"
                style="@style/Estilo"
                android:text="Imagen y Sonido"
                android:onClick="abrirDisenoImgYSonido"/>
            <View
                style="@style/Lineas_view" />

            <TextView
                android:id="@+id/disenoindumentariaboton"
                style="@style/Estilo"
                android:text="Dise침o de Indumentaria"
                android:onClick="abrirDisenoIndYText"/>
            <View
                style="@style/Lineas_view" />

            <TextView
                android:id="@+id/disenoindustrialboton"
                style="@style/Estilo"
                android:text="Dise침o Industrial"
                android:onClick="abrirDisenoIndustrial"/>
            <View
                style="@style/Lineas_view"/>

            <TextView
                android:id="@+id/disenopaisajeboton"
                style="@style/Estilo"
                android:text="Paisajismo"
                android:onClick="abrirPaisajismo"/>

            <View
                style="@style/Lineas_view"/>



        </LinearLayout>
    </LinearLayout>


</LinearLayout>
