<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".CarrerasActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:theme="@style/Toolbar"
        app:title="Diseño Grafico" />

    <RelativeLayout
        android:id="@+id/textViewHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aprobadas_text_view"
                style="@style/Header_view"
                android:fontFamily="sans-serif-light"
                android:text="Aprobadas: 0 "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/restantes_text_view"
                style="@style/Header_view"
                android:fontFamily="sans-serif-light"
                android:text="Restantes: 24"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/progressBarView"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="8dp"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/customprogressbar" />


                <TextView
                    android:id="@+id/porcentaje_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="sans-serif-light"
                    android:text="0 %"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewHeader">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:background="@drawable/fondo2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@drawable/fondo1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="CBC"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp" />

                <CheckBox
                    android:id="@+id/SociedadYEstado"
                    style="@style/checkbox_style"

                    android:text="Sociedad y Estado" />

                <CheckBox
                    android:id="@+id/PensamientoCientifico"
                    style="@style/checkbox_style"

                    android:text="Pensamiento Cientifico" />

                <CheckBox
                    android:id="@+id/ProyectualI"
                    style="@style/checkbox_style"
                    android:text="Proyectual I" />

                <CheckBox
                    android:id="@+id/ProyectualII"
                    style="@style/checkbox_style"

                    android:text="Proyectual II" />

                <CheckBox
                    android:id="@+id/MatematicaI"
                    style="@style/checkbox_style"

                    android:text="Matematica I" />

                <CheckBox
                    android:id="@+id/Filosofia"
                    style="@style/checkbox_style"

                    android:text="Filosofia" />

                <CheckBox
                    android:id="@+id/TallerDeDibujo"
                    style="@style/checkbox_style"

                    android:text="Taller de Dibujo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="Nivel 1"
                    android:textColor="#03a9f4"
                    android:textSize="16dp" />

                <CheckBox
                    android:id="@+id/DisenoGraficoI"
                    style="@style/checkbox_style"

                    android:text="Diseño Grafico I" />

                <CheckBox
                    android:id="@+id/MorfologiaI"
                    style="@style/checkbox_style"

                    android:text="Morfologia I" />

                <CheckBox
                    android:id="@+id/TipografiaI"
                    style="@style/checkbox_style"

                    android:text="Tipografía I" />

                <CheckBox
                    android:id="@+id/ComunicacionI"

                    style="@style/checkbox_style"
                    android:text="Comunicación I" />

                <CheckBox
                    android:id="@+id/HistoriaI"

                    style="@style/checkbox_style"
                    android:text="Historia I" />

                <CheckBox
                    android:id="@+id/MediosExpresivosI"

                    style="@style/checkbox_style"
                    android:text="Medios Expresivos I" />

                <CheckBox
                    android:id="@+id/TecnologiaI"

                    style="@style/checkbox_style"
                    android:text="Tecnología I" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="Nivel 2"
                    android:textColor="#03a9f4"
                    android:textSize="16dp" />

                <CheckBox
                    android:id="@+id/DisenoGraficoII"

                    style="@style/checkbox_style"
                    android:text="Diseño Grafico II" />

                <CheckBox
                    android:id="@+id/MorfologiaII"

                    style="@style/checkbox_style"
                    android:text="Morfología II" />

                <CheckBox
                    android:id="@+id/TipografiaII"

                    style="@style/checkbox_style"
                    android:text="Tipografía II" />

                <CheckBox
                    android:id="@+id/ComunicacionII"

                    style="@style/checkbox_style"
                    android:text="Comunicación II" />

                <CheckBox
                    android:id="@+id/HistoriaII"

                    style="@style/checkbox_style"
                    android:text="Historia II" />

                <CheckBox
                    android:id="@+id/MediosExpresivosII"

                    style="@style/checkbox_style"
                    android:text="Medios Expresivos II" />

                <CheckBox
                    android:id="@+id/TecnologiaII"

                    style="@style/checkbox_style"
                    android:text="Tecnología II" />

                <CheckBox
                    android:id="@+id/DisenoGraficoPorComputadora"

                    style="@style/checkbox_style"
                    android:text="Diseño Grafico por computadora" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="Nivel 3"
                    android:textColor="#03a9f4"
                    android:textSize="16dp" />

                <CheckBox
                    android:id="@+id/DisenoGraficoIII"

                    style="@style/checkbox_style"
                    android:text="Diseño Gráfico III" />

                <CheckBox
                    android:id="@+id/Optatitvas"

                    style="@style/checkbox_style"
                    android:text="Optativas" />


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</LinearLayout>