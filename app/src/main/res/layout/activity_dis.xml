<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".CarrerasActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/Toolbar"
        app:title="Imagen y Sonido"/>

    <RelativeLayout
        android:id="@+id/textViewHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/aprobadas_text_view"
                style="@style/Header_view"
                android:text="Aprobadas: 0 "
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/restantes_text_view"
                style="@style/Header_view"
                android:text="Restantes: 24"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/progressBarView"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/customprogressbar"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="24dp"
                    android:max="100"
                    android:progress="0" />


                <TextView
                    android:id="@+id/porcentaje_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="0 %"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:textSize="20sp" />



            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewHeader">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:background="@drawable/fondo2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@drawable/fondo1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:text="CBC" />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/SociedadYEstado"
                    android:text="Sociedad y Estado"
                    />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/PensamientoCientifico"
                    android:text="Pensamiento Cientifico"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/ProyectualI"
                    android:text="Proyectual I"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/ProyectualII"
                    android:text="Proyectual II"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/Matematica"
                    android:text="Matematica"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/Semiologia"
                    android:text="Semiología"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/TallerDeDibujo"
                    android:text="Taller de Dibujo"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nivel 1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:textColor="#03a9f4"
                    android:textSize="16dp"/>

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/DisenoAudiovisualI"
                    android:text="Diseño Audiovisual I"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/MontajeI"
                    android:text="Montaje I"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Sonido I"
                    android:id="@+id/SonidoI"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/DibujoYMaqueta"
                    android:text="Dibujo y Maqueta"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/EstructurasNarrativasAudiovisuales"
                    android:text="Estructuras narrativas audiovisuales"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/HistoriaDeLosMediosInternacional"
                    android:text="Historia de los medios - Internacional"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/IluminacionYCamaraI"
                    android:text="Iluminación y cámara I"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/IntroAlGuionI"
                    android:text="Intro. al Guión I"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/LiteraturaDeLasArtesCombinadasI"
                    android:text="Literatura de las Artes Combinadas I"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/TecnicasAudiovisuales"
                    android:text="Técnicas Audiovisuales"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nivel 2"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:textColor="#03a9f4"
                    android:textSize="16dp" />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/DisenoAudiovisualII"
                    android:text="Diseño Audiovisual II"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/Estetica"
                    android:text="Estética"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Guión I"
                    android:id="@+id/GuionI"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/HistoriaDeLosMediosArgYLatAm"
                    android:text="Historia de los medios - Arg y LatAm"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/LiteraturaDeLasArtesCombinadasII"
                    android:text="Literatura de las Artes Combinadas II"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/ProduccionYPlanificacion"
                    android:text="Producción y Planificación"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/TeoriaYEsteticaDeLosMedios"
                    android:text="Teoría y Estética de los medios"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/Electivas"
                    android:text="Electivas"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nivel 3"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:textColor="#03a9f4"
                    android:textSize="16dp" />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/DisenoAudiovisualIII"
                    android:text="Diseño Audiovisual III"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Guión II"
                    android:id="@+id/GuionII"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/DifusionYComercializacionDeLosMedios"
                    android:text="Difusión y Comercialización de los Medios"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/EsteticaDelCineYTeoriaCinematografica"
                    android:text="Estética del Cine y Teoría Cinematográfica"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Sociología"
                    android:id="@+id/Sociologia"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/Optatitvas"
                    android:text="Optativas"
                     />




            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</LinearLayout>