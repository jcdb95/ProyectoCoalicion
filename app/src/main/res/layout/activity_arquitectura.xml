<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".CarrerasActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:theme="@style/Toolbar"
        app:title="Arquitectura" />

    <RelativeLayout
        android:id="@+id/textViewHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aprobadas_text_view"
                style="@style/Header_view"
                android:fontFamily="sans-serif-light"
                android:text="Aprobadas: 0 "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/restantes_text_view"
                style="@style/Header_view"
                android:fontFamily="sans-serif-light"
                android:text="Restantes: 41"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/progressBarView"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="8dp"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/customprogressbar" />


                <TextView
                    android:id="@+id/porcentaje_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="sans-serif-light"
                    android:text="0 %"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewHeader">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:background="@drawable/fondo2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@drawable/fondo1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="CBC"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp" />


                <CheckBox
                    android:id="@+id/SociedadYEstado"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Sociedad y Estado" />


                <CheckBox
                    android:id="@+id/PensamientoCientifico"
                    style="@style/checkbox_style"
                    android:enabled="false"
                    android:onClick="clickeada"
                    android:text="Pensamiento Cientifico" />

                <CheckBox
                    android:id="@+id/ProyectualI"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Proyectual I" />

                <CheckBox
                    android:id="@+id/ProyectualII"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Proyectual II" />

                <CheckBox
                    android:id="@+id/MatematicaI"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Matematica I" />

                <CheckBox
                    android:id="@+id/Filosofia"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Filosofia" />

                <CheckBox
                    android:id="@+id/TallerDeDibujo"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Taller de Dibujo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="Nivel 1"
                    android:textColor="#03a9f4"
                    android:textSize="16dp" />

                <CheckBox
                    android:id="@+id/Arquitectura1"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Arquitectura I" />

                <CheckBox
                    android:id="@+id/MatematicaII"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Matematica II" />

                <CheckBox
                    android:id="@+id/SistDeRepGeometrica"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Sistemas de Rep. Geometrica" />

                <CheckBox
                    android:id="@+id/Fisica"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Fisica" />

                <CheckBox
                    android:id="@+id/IntroALaArqContemp"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Intro. a la Arq. Contemporanea" />

                <CheckBox
                    android:id="@+id/IntroALosTiposConstr"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Intro. a los Tipos Constructivos" />

                <CheckBox
                    android:id="@+id/IntroALosTiposEstr"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Intro a los tipos estructurales" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="Nivel 2"
                    android:textColor="#03a9f4"
                    android:textSize="16dp" />

                <CheckBox
                    android:id="@+id/ArquitecturaII"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Arquitectura II" />

                <CheckBox
                    android:id="@+id/EstructurasI"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Estructuras I" />

                <CheckBox
                    android:id="@+id/HistoriaI"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Historia I" />

                <CheckBox
                    android:id="@+id/ConstruccionesI"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Construcciones I" />

                <CheckBox
                    android:id="@+id/InstalacionesI"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Instalaciones I" />

                <CheckBox
                    android:id="@+id/MorfologiaI"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Morfologia I" />

                <CheckBox
                    android:id="@+id/RepArq"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Rep. Arq." />

                <CheckBox
                    android:id="@+id/DisenoPorComputadora"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Diseno por Computadora" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="Nivel 3"
                    android:textColor="#03a9f4"
                    android:textSize="16dp" />

                <CheckBox
                    android:id="@+id/ArquitecturaIII"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Arquitectura III" />

                <CheckBox
                    android:id="@+id/EstructurasII"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Estructuras II" />

                <CheckBox
                    android:id="@+id/HistoriaII"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Historia II" />

                <CheckBox
                    android:id="@+id/ConstruccionesII"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Construcciones II" />

                <CheckBox
                    android:id="@+id/InstalacionesII"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Instalaciones II" />

                <CheckBox
                    android:id="@+id/MorfologiaII"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Morfologia II" />

                <CheckBox
                    android:id="@+id/MaterializacionDeProyectos"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Materializacion de proyectos" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="Nivel 4"
                    android:textColor="#03a9f4"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/ArquitecturaIV"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Arquitectura IV" />

                <CheckBox
                    android:id="@+id/EstructurasIII"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Estructuras III" />

                <CheckBox
                    android:id="@+id/PlanificacionUrbana"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Planificacion Urbana" />

                <CheckBox
                    android:id="@+id/ConsturccionesIII"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Construcciones III" />

                <CheckBox
                    android:id="@+id/InstalacionesIII"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Instalaciones III" />

                <CheckBox
                    android:id="@+id/HistoriaIII"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Historia III" />

                <CheckBox
                    android:id="@+id/TeoriaDeLaArq"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Teoria de la Arq." />

                <CheckBox
                    android:id="@+id/Optativas"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Optativas" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:text="Nivel 5"
                    android:textColor="#03a9f4"
                    android:textSize="16dp" />

                <CheckBox
                    android:id="@+id/DireccionYLegislacionDeObra"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Direccion y Legislacion de Obra" />

                <CheckBox
                    android:id="@+id/ProyectoUrbano"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Proyecto Urbano" />

                <CheckBox
                    android:id="@+id/ProyectoArq"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Proyecto Arquitectonico" />

                <CheckBox
                    android:id="@+id/Optativas2"
                    style="@style/checkbox_style"
                    android:onClick="clickeada"
                    android:text="Optativas" />


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</LinearLayout>