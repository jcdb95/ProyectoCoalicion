<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".CarrerasActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/Toolbar"
        app:title="Indumentaria y Textil"/>

    <RelativeLayout
        android:id="@+id/textViewHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/aprobadas_text_view"
                style="@style/Header_view"
                android:text="Aprobadas: 0 "
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/restantes_text_view"
                style="@style/Header_view"
                android:text="Restantes: 24"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/progressBarView"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/customprogressbar"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="24dp"
                    android:max="100"
                    android:progress="0" />


                <TextView
                    android:id="@+id/porcentaje_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="0 %"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:textSize="20sp" />



            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewHeader">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:background="@drawable/fondo2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@drawable/fondo1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:text="CBC" />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/SociedadYEstado"
                    android:text="Sociedad y Estado"
                    />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/PensamientoCientifico"
                    android:text="Pensamiento Cientifico"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/ProyectualI"
                    android:text="Proyectual I"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Proyectual II"
                    android:id="@+id/ProyectualII"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Matematica I"
                    android:id="@+id/MatematicaI"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/Filosofia"
                    android:text="Filosofia"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/TallerDeDibujo"
                    android:text="Taller de Dibujo"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nivel 1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:textColor="#03a9f4"
                    android:textSize="16dp" />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/DisenoGraficoI"
                    android:text="Diseño Grafico I"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Morfologia I"
                    android:id="@+id/MorfologiaI"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Tipografía I"
                    android:id="@+id/TipografiaI"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/ComunicacionI"
                    android:text="Comunicación I"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/HistoriaI"
                    android:text="Historia I"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/MediosExpresivosI"
                    android:text="Medios Expresivos I"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Tecnología I"
                    android:id="@+id/TecnologiaI"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nivel 2"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:textColor="#03a9f4"
                    android:textSize="16dp" />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/DisenoGraficoII"
                    android:text="Diseño Grafico II"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Morfología II"
                    android:id="@+id/MorfologiaII"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Tipografía II"
                    android:id="@+id/TipografiaII"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Comunicación II"
                    android:id="@+id/ComunicacionII"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Historia II"
                    android:id="@+id/HistoriaII"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Medios Expresivos II"
                    android:id="@+id/MediosExpresivosII"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Tecnología II"
                    android:id="@+id/TecnologiaII"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/DisenoGraficoPorComputadora"
                    android:text="Diseño gráfico por computadora"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nivel 3"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:textColor="#03a9f4"
                    android:textSize="16dp"/>

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Diseño Gráfico III"
                    android:id="@+id/DisenoGraficoIII"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Optativas"
                    android:id="@+id/Optatitvas"
                     />



            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</LinearLayout>