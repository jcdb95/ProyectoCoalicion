<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".CarrerasActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/Toolbar"
        app:title="Diseño Industrial"/>

    <RelativeLayout
        android:id="@+id/textViewHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/aprobadas_text_view"
                style="@style/Header_view"
                android:text="Aprobadas: 0 "
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/restantes_text_view"
                style="@style/Header_view"
                android:text="Restantes: 32"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/progressBarView"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/customprogressbar"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="24dp"
                    android:max="100"
                    android:progress="0" />


                <TextView
                    android:id="@+id/porcentaje_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="0 %"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:textSize="20sp" />



            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewHeader">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:background="@drawable/fondo2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@drawable/fondo1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:text="CBC" />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Sociedad y Estado"
                    android:id="@+id/SociedadYEstado"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Pensamiento Cientifico"
                    android:id="@+id/PensamientoCientifico"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Proyectual I"
                    android:id="@+id/ProyectualI"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Proyectual II"
                    android:id="@+id/ProyectualII"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Matematica"
                    android:id="@+id/Matematica"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Antropología"
                    android:id="@+id/Antropologia"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/TallerDeDibujo"
                    android:text="Taller de Dibujo"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nivel 1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:textColor="#03a9f4"
                    android:textSize="16dp"/>

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/DisenoIndustrialI"
                    android:text="Diseño Industrial I"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Morfología"
                    android:id="@+id/Morfologia"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Tecnología I"
                    android:id="@+id/TecnologiaI"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Física I"
                    android:id="@+id/FisicaI"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/MatematicaI"
                    android:text="Matemática I"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/IntroAlDisenoYArqModerna"
                    android:text="Intro. al diseño y Arq. moderna"
                     />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nivel 2"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:textColor="#03a9f4"
                    android:textSize="16dp" />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/DisenoIndustrialII"
                    android:text="Diseño Industrial II"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/MorfologiaEspecialI"
                    android:text="Morfología Especial I"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Tecnología II"
                    android:id="@+id/TecnologiaII"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Física II"
                    android:id="@+id/FisicaII"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Ergonomía"
                    android:id="@+id/Ergonomia"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Historia del Diseño Industrial"
                    android:id="@+id/HistoriaDelDisenoIndustrial"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nivel 3"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:textColor="#03a9f4"
                    android:textSize="16dp"/>

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Diseño Industrial III"
                    android:id="@+id/DisenoIndustrialIII"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/MorfologiaEspecialII"
                    android:text="Morfología Especial II"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/TecnologiaIII"
                    android:text="Tecnología III"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/AnalisisDeProductos"
                    android:text="Análisis de Productos"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/IndustriaArgentina"
                    android:text="Industria Argentina"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/OptativaI"
                    android:text="Optativa I"
                     />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nivel 4"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:textColor="#03a9f4"
                    android:textSize="16dp"/>

                <CheckBox
                    style="@style/checkbox_style"

                    android:text="Tecnología IV"
                    android:id="@+id/TecnologiaIV"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/DisenoIndustrialIV"
                    android:text="Diseño Industrial IV"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/DisenoIndustrialV"
                    android:text="Diseño Industrial V"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/LegislacionYPracticaProfesional"
                    android:text="Legislación y práctica profesional"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/Metodologia"
                    android:text="Metodología"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/SociologiaAplicadaAlDiseno"
                    android:text="Sociología aplicada al diseño"
                     />

                <CheckBox
                    style="@style/checkbox_style"

                    android:id="@+id/OptativaII"
                    android:text="Optativa II"
                     />


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</LinearLayout>